NODE_ENV=development
PORT=3000
PUBLIC_BASE_URL=http://localhost:3000

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5

# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_VOICE_STABILITY=0.5
ELEVENLABS_VOICE_STYLE=0.5
# Optional JSON map of speaker labels to voice IDs, e.g. {"Host A":"<voiceIdA>","Host B":"<voiceIdB>"}
ELEVENLABS_VOICES_JSON=

# Languages and voice mapping
# Comma-separated list in menu order. By default: 1=en, 2=fr
LANGUAGES=en,fr
# JSON mapping from language code to ElevenLabs voice ID, e.g. {"en":"<voiceIdEn>","fr":"<voiceIdFr>"}
ELEVENLABS_LANG_VOICE_MAP_JSON={}
# Greeting prompt (played once to collect language selection)
GREETING_TEXT=Welcome to the Canadian-run Digg news hotline! For English, press 1. Pour le fran√ßais, appuyez sur 2.
# Optional greeting voice; defaults to English voice mapping or ELEVENLABS_VOICE_ID
GREETING_VOICE_ID=

# Admin
ADMIN_API_KEY=

# DiggAPI stub controls
DIGG_USE_MOCK=true

# Article fetching & summarization
# When true, fetch each story URL, extract main text, and summarize it via OpenAI
FETCH_ARTICLE_CONTENT=false
FETCH_TIMEOUT_MS=10000
FETCH_USER_AGENT=NewsStoryHotline/0.1 (+https://example.com; Node.js)
SUMMARY_MAX_CHARS=5000

# Twilio (used to configure your account; not required by code here)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
